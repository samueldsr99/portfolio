---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="skills-wrapper">
  <h1>{title}</h1>
  <ul class="skills-list">
    <slot />
  </ul>
</div>

<style scoped>
  .skills-wrapper > h1 {
    text-align: center;
    font-size: 16px;
    text-transform: uppercase;

    @media (min-width: 768px) {
      text-align: left;
    }
  }
  .skills-list {
    margin-top: 6px;
    display: flex;
    justify-content: center;
    gap: 24px;

    @media (min-width: 768px) {
      justify-content: flex-start;
    }
  }
</style>
