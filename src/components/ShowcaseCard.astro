---
interface Props {
  className?: string;
  href: string;
  imageUrl: string;
  alt: string;
  title: string;
  description: string;
}

const { className, imageUrl, href, alt, title, description } = Astro.props;
---

<div class={`card ${className}`}>
  <img src={imageUrl} alt={alt} width={420} height={300} />
  <div class="card-content">
    <div>
      <h3>{title}</h3>
      <p>{description}</p>
    </div>
    <a href={href} target="_blank">{href}</a>
  </div>
</div>

<style scoped>
  .card {
    cursor: pointer;
    position: relative;
    width: 620px;
    height: 300px;
  }
  .card-content {
    position: absolute;
    inset: 0;
    opacity: 0;

    border-radius: 24px;
    padding: 12px 16px;
    background-color: rgba(50, 50, 50, 0.96);

    display: flex;
    flex-direction: column;
    justify-content: space-between;

    transition: opacity 400ms;

    &:hover {
      opacity: 1;
      box-shadow: rgba(23, 92, 230, 0.45) 0px 0px 140px;
    }
  }
  .card-content > div > h3 {
    font-size: 32px;
  }
  .card-content > div > p {
    margin-top: 24px;
    font-size: 18px;
  }
  .card-content > a {
  }

  .card > img {
    position: absolute;
    inset: 0;
    width: 100%;
    border-radius: 24px;
    object-fit: cover;
    z-index: 0;
  }
</style>
